# OpenAI API Key (required for DSPy)
OPENAI_API_KEY=your-openai-api-key-here

# Elasticsearch Configuration (optional)
ES_HOST=localhost
ES_PORT=9200
ES_INDEX_NAME=legal_docs

# Model Configuration
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2
LLM_MODEL=gpt-4o

# Retrieval Parameters
VECTOR_TOP_K=20
BM25_TOP_K=20
FINAL_TOP_K=5

# Circuit Breaker
NOVELTY_EPSILON=0.2
MAX_ITERATIONS=5

# Feature Flags (for ablation testing)
USE_DSPY_SIGNATURES=true
USE_NOVELTY_CIRCUIT=true
USE_NEGATIVE_MEMORY=true
USE_CASCADE_RECALL=true

# Debug Settings
DEBUG_MODE=true
LOG_RETRIEVAL_STEPS=true
